<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.duolanjian.java.market.mapper.UserMapper">

	<resultMap id="userMap" type="User">
		<result property="id" column="pk_id" />
		<result property="weichat" column="weichat" />
	</resultMap>
	
    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO t_user(`weichat`) 
		VALUES(#{weichat})
	</insert>
	<select id="selectOne" parameterType="Map" resultMap="userMap">
		SELECT * 
		FROM t_user
		WHERE pk_id = #{id}
	</select>
	
	<select id="selectListByPage" parameterType="Map" resultMap="userMap">
        SELECT * 
        FROM t_user
        order by pk_id desc
        LIMIT #{limit}
        OFFSET #{offset}
    </select>
    <select id="selectListByIds" parameterType="Map" resultMap="userMap">
        SELECT * 
        FROM t_user
        WHERE pk_id IN
	    <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
	        #{item}
	    </foreach>
    </select>
    <select id="countListByIds" parameterType="Map" resultType="Integer">
        SELECT count(1)
        FROM t_user
        WHERE pk_id IN
	    <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
	        #{item}
	    </foreach>
    </select>

	<update id="update" parameterType="User">
		UPDATE t_user
		SET `weichat` = #{weichat}
		WHERE pk_id = #{id}
	</update>

	<delete id="delete" parameterType="Map">
		delete from t_user
		where pk_id = #{id}
	</delete>
	
	<delete id="deleteAll">
		delete from t_user
    </delete>
	
</mapper>